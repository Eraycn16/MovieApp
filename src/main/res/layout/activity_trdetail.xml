<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TRDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/trDetailImg"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher">
        </ImageView>

        <TextView
            android:id="@+id/trDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trDetailImg"
            android:text="MOVIE NAME"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/trDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trDetailTitle"
            android:text="MOVIE DETAILS"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/trDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trDetail"
            android:text="MOVIE DATE"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:textColor="@color/white">
        </TextView>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_below="@id/trDetailDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress_direction="to_right"
            app:cpb_round_border="false"
            />

        <TextView
            android:id="@+id/average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trDetailDate"
            android:text="%%%"
            android:textSize="30dp"
            android:layout_marginTop="110dp"
            android:textColor="@color/white"
            android:layout_marginLeft="170dp">

        </TextView>

    </RelativeLayout>

</ScrollView>